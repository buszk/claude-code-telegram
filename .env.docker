# ============================================================
# Docker Environment Variables
# Copy this file to .env and customize
# ============================================================

# === REQUIRED ===
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username

# === CLAUDE AUTHENTICATION ===
# Option 1: Use Anthropic API key (recommended for Docker)
USE_SDK=true
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Option 2: Use existing Claude CLI auth (leave ANTHROPIC_API_KEY empty)
# USE_SDK=true
# ANTHROPIC_API_KEY=

# Option 3: CLI subprocess mode
# USE_SDK=false

# === OPTIONAL SECURITY ===
# Comma-separated Telegram user IDs (leave empty for all users)
# ALLOWED_USERS=

# === OPTIONAL FEATURES ===
# Enable API server (required for webhooks)
ENABLE_API_SERVER=true
API_SERVER_PORT=8080

# Enable scheduler
ENABLE_SCHEDULER=false

# GitHub webhook secret (if using GitHub integration)
# GITHUB_WEBHOOK_SECRET=

# Webhook API secret
# WEBHOOK_API_SECRET=
